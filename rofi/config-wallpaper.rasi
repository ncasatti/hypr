/* Main Config (wallpaper) */

@import "~/.config/rofi/config.rasi"  

/* ---- Configuration ---- */ 
configuration {
  modi: "drun";
}

window {
  width: 75%;
  height: inherit;
}

/* ---- Mainbox ---- */
mainbox {
  children:
    [ "inputbar", "listview"];
}

entry {
  expand: true;
  placeholder: " 🎞️ Choose Wallpaper";
  horizontal-align: 0.5;
  horizontal-align: 0.5;
}

/* ---- Listview ---- */
listview {
  columns: 4;
  lines: 5;
  spacing: 0px;
  padding: 0px;
  flow: horizontal;
  fixed-width: true;
  fixed-height: true;
  cycle: true;
}

/* ---- Element ---- */
element {
  orientation: vertical;
  padding: 0px;
  spacing: 0px;
  border-radius: 2px;
  padding: 0px;
  margin: 0px;
}

element selected.normal {
  background-color: transparent;
}

/* element-icon { text-color:                  inherit; size:                        10%; margin:                      -30px; cursor:                      inherit; } */

element-icon {
    size: 128px;
    border: 0px;
    border-radius: 0px;
    background-color: transparent;
}


element-text {
  vertical-align: 0.5;
  horizontal-align: 0.5;
  padding: 2px;
  margin: 0px;
}
